<input type="search"
       placeholder=@Placeholder
       @bind-value=@Value
       enterkeyhint="enter"
       class="block w-full rounded-md border border-slate-300 bg-white p-2 shadow-sm placeholder:italic placeholder:text-slate-400 focus:border-violet-700 focus:outline-none focus:ring-1 focus:ring-violet-700 sm:text-sm" />

@code {
    [Parameter]
    public string Placeholder { get; set; } = "";

    private string _value = "";

    [Parameter]
    public string Value
    {
        get => _value;
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(value);
            }
        }
    }

    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }
}
